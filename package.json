{
  "name": "@ghost-cms/mcp-server",
  "version": "1.0.0",
  "description": "A comprehensive Model Context Protocol (MCP) server for Ghost CMS with full CRUD operations, bulk actions, and advanced features",
  "keywords": [
    "mcp",
    "ghost",
    "ghost-cms",
    "blogging",
    "cms",
    "automation",
    "model-context-protocol",
    "ai",
    "claude",
    "api"
  ],
  "homepage": "https://github.com/yourusername/ghost-cms-mcp-server#readme",
  "bugs": {
    "url": "https://github.com/yourusername/ghost-cms-mcp-server/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/ghost-cms-mcp-server.git"
  },
  "license": "MIT",
  "author": "Ghost CMS MCP Team",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "ghost-cms-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist coverage",
    "dev": "tsx --watch src/index.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "prepublishOnly": "npm run test && npm run lint && npm run build",
    "start": "node dist/index.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:integration": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=integration",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=unit",
    "test:e2e": "NODE_OPTIONS=--experimental-vm-modules jest --testPathPattern=e2e --runInBand"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@tryghost/admin-api": "^1.13.11",
    "@tryghost/content-api": "^1.11.20",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "node-cache": "^5.1.2",
    "p-queue": "^8.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "nock": "^13.4.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}