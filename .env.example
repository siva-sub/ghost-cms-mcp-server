# Ghost API Configuration
# Your Ghost site URL (required)
GHOST_URL=https://your-site.ghost.io

# Ghost Admin API Key (required)
# Format: {id}:{secret}
# Get this from Ghost Admin > Integrations > Custom Integration
GHOST_ADMIN_API_KEY=your-admin-key-id:your-admin-key-secret

# Ghost Content API Key (required)
# Get this from Ghost Admin > Integrations > Custom Integration
GHOST_CONTENT_API_KEY=your-content-api-key

# Server Configuration (optional)
MCP_SERVER_NAME=ghost-cms-mcp
MCP_SERVER_VERSION=1.0.0

# Logging Configuration (optional)
# Levels: error, warn, info, debug
LOG_LEVEL=info
LOG_FILE=ghost-mcp.log

# Rate Limiting (optional)
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100
# Time window in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# Cache Configuration (optional)
# Cache TTL in milliseconds
CACHE_TTL_MS=300000
# Enable/disable caching
CACHE_ENABLED=true

# Retry Configuration (optional)
# Maximum retry attempts for failed requests
MAX_RETRY_ATTEMPTS=3
# Initial retry delay in milliseconds
RETRY_DELAY_MS=1000
# Maximum retry delay in milliseconds
MAX_RETRY_DELAY_MS=30000

# Advanced Features (optional)
# Enable bulk operations
ENABLE_BULK_OPERATIONS=true
# Maximum items per bulk operation
BULK_OPERATION_LIMIT=100

# Development Options (optional)
# Enable debug mode
DEBUG=false
# Enable request/response logging
LOG_REQUESTS=false